<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
  <default translate="label" module="page">
    <reference name="head">
    <!-- Adding Javascripts -->
    <action method="addItem">
      <type>skin_js</type>
      <name>js/jquery-1.11.1.min.js</name>
    </action>
    <action method="addItem">
      <type>skin_js</type>
      <name>js/bootstrap.min.js</name>
    </action>
    <!-- <action method="addItem">
      <type>skin_js</type>
      <name>js/easySlider1.7.js</name>
    </action> -->

    <!-- Removing the styles.css -->
    <!-- <action method="removeItem">
      <type>skin_css</type><name>css/styles.css</name>
    </action> -->
    <!-- Adding Bootstrap Css -->
    <action method="addItem">
      <type>skin_css</type>
      <stylesheet>css/bootstrap.min.css</stylesheet>
    </action>
    <action method="addItem">
      <type>skin_css</type>
      <stylesheet>css/bootstrap-theme.min.css</stylesheet>
    </action>
    <!-- Adding the styles.css -->
    <action method="addItem">
      <type>skin_css</type>
      <stylesheet>css/styles.css</stylesheet>
    </action>

    <action method="addItem">
      <type>skin_css</type>
      <stylesheet>css/mycustom.css</stylesheet>
    </action>


    </reference>


    <reference name="root">
            <reference name="top.links">



                <!-- Removes 'My Account' link - Default position: 10 -->


                <!-- for Magento 1.4.x -->
                <remove name="wishlist_link"/>

                <!-- Removes 'My Cart' AND 'Checkout' links
                Default position: 40 and 50 respectively -->
                <remove name="checkout_cart_link"/>

                <!-- To re-add 'My Cart' or 'Checkout' after removing both -->
                <block type="checkout/links" name="checkout_cart_link_custom">
                    <action method="addCartLink"></action>
                    <action method="addCheckoutLink"></action>
                </block>



            </reference>
        </reference>


  </default>


  <reference name="root">
     <action method="setTemplate">
       <template>page/1column.phtml</template>
     </action>
  </reference>

  <reference name="content">
    <block type="cms/page" name="home_custom_block1" template="page/html/test.phtml"></block>
  </reference>

  <cms_index_index>
    <block type="cms/block" name="home_custom_slider">
            <action method="setBlockId"><block_id>home_custom_slider</block_id></action>
    </block>


  </cms_index_index>



</layout>
